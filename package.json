{
  "name": "nextjs-aws-template",
  "version": "0.1.0",
  "private": true,
  "description": "A production-ready Next.js template with AWS CDK, Google Analytics, Google AdSense, and Tailwind CSS",
  "scripts": {
    "dev": "next dev -p 3737",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build:cdk": "cd cdk && rm -f lib/*.d.ts lib/*.js && npm run build",
    "cdk:install": "cd cdk && npm install",
    "cdk:synth": "cd cdk && npx cdk synth",
    "deploy:foundation": "./scripts/deploy-foundation.sh",
    "deploy:cert": "./scripts/deploy-cert.sh",
    "deploy:edge": "./scripts/deploy-edge-functions.sh",
    "deploy:waf": "./scripts/deploy-waf.sh",
    "deploy:cdn": "./scripts/deploy-cdn.sh --nextjs",
    "deploy:app": "./scripts/deploy-app-content.sh",
    "deploy:monitoring": "./scripts/deploy-monitoring.sh",
    "deploy:monitoring:enhanced": "cd cdk && npm run build && npx cdk deploy SONGSNIPS-Monitoring --parameters notificationEmail=${NOTIFICATION_EMAIL}",
    "deploy:api": "./scripts/deploy-api.sh",
    "deploy:api:only": "./scripts/api-commands.sh deploy",
    "diff:api": "./scripts/api-commands.sh diff",
    "destroy:api": "./scripts/api-commands.sh destroy",
    "fix:bucket-policy": "./scripts/fix-bucket-policy.sh",
    "deploy:all": "./scripts/deploy-all-decoupled.sh --nextjs",
    "status": "./scripts/check-stack-status.sh",
    "status:all": "./scripts/check-all-stacks.sh",
    "destroy:waf": "./scripts/destroy-waf.sh",
    "destroy:monitoring": "./scripts/destroy-monitoring.sh",
    "maintenance:on": "./scripts/maintenance-mode.sh on",
    "maintenance:off": "./scripts/maintenance-mode.sh off",
    "maintenance:update": "./scripts/maintenance-mode.sh update",
    "todo": "./scripts/update-todos.sh show",
    "todo:add": "./scripts/update-todos.sh add",
    "todo:complete": "./scripts/update-todos.sh complete",
    "todo:progress": "./scripts/update-todos.sh progress",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run",
    "test:e2e:dev": "cypress open",
    "typecheck": "tsc --noEmit",
    "export": "next build && next export -o out"
  },
  "dependencies": {
    "next": "^15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.3",
    "cypress": "^14.4.1",
    "eslint": "^9",
    "eslint-config-next": "15.1.8",
    "jsdom": "^26.1.0",
    "msw": "^2.10.2",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.4",
    "typescript": "^5",
    "vitest": "^3.2.3",
    "vitest-canvas-mock": "^0.3.3"
  }
}
